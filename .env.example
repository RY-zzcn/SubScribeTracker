# 环境变量配置文件

# 数据库配置
DATABASE_URL=sqlite:./data/database.sqlite
# 或使用 PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/subscribetracker

# JWT 密钥 (必须设置)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 日志级别
LOG_LEVEL=info

# 服务端口
PORT=3001

# 企业微信通知 (可选)
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# 钉钉通知 (可选)
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your-token

# Telegram 通知 (可选)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# WX Pusher 通知 (可选)
WXPUSHER_APP_TOKEN=your-app-token
WXPUSHER_UID=your-uid

# 邮件通知 (可选)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-email@gmail.com

# Gemini AI API (可选)
GEMINI_API_KEY=your-gemini-api-key

# 生产环境设置
NODE_ENV=development